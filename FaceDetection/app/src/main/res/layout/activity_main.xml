<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/capture_pic_camera"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:src="@android:drawable/ic_menu_camera" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capture_pic_label" />

            <EditText
                android:id="@+id/capture_pic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/capture_pic_hint" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/capture_pic"
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:background="@android:color/darker_gray"
        android:cropToPadding="true"
        android:scaleType="centerInside" />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/capture_pic_details" />

    <Button
        android:id="@+id/capture_pic_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/capture_pic_solved"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="@string/capture_pic_solved" />

    <Button
        android:id="@+id/capture_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/capture_pic_done" />

</LinearLayout>